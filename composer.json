{
  "name": "mfc/oauth2",
  "type": "typo3-cms-extension",
  "description": "Generic OAuth2 authentication and authorization for TYPO3 CMS",
  "homepage": "https://www.marketing-factory.de",
  "authors": [
    {
      "name": "Christian Hellmund",
      "role": "Developer"
    },
    {
      "name": "Simon Schmidt",
      "role": "Developer"
    },
    {
      "name": "Christian Spoo",
      "role": "Developer"
    },
    {
      "name": "Karoline Steinfatt",
      "role": "Maintainer"
    }
  ],
  "license": [
    "MIT"
  ],
  "keywords": [
    "TYPO3 CMS",
    "OAuth"
  ],
  "autoload": {
    "psr-4": {
      "Mfc\\OAuth2\\": "Classes/"
    }
  },
  "require": {
    "php": "^7.2",
    "league/oauth2-client": "^2.3",
    "m4tthumphrey/php-gitlab-api": "^9.19.2",
    "omines/oauth2-gitlab": "^3.1",
    "php-http/guzzle6-adapter": "^1.1||^2.0",
    "typo3/cms-core": "^8.7||^9.4||^10.4",
    "typo3/cms-beuser": "^8.7||^9.4||^10.4"
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "oauth2"
    }
  }
}
